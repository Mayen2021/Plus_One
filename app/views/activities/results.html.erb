<%= render "search_form" %>
<%if params[:query].present?  %>
  <h4 class="activity-title"> List of activities for <em>"<%= params[:query] %>"<em> </h4>
    <% else %>
   <h4 class="activity-title"> List of activities </h4>
  <% end %>

<div class="container my-3">
<div class="row">
  <% if @activities.empty? %>
    <h3 class="search-result justify-content-center">Results not found ğŸ™</h3>
  <% end %>
  <% @activities.each do |activity| %>
  <div class="col-4">
    <%= link_to activity_path(activity), class:'text-decoration-none' do %>
    <div class="card-category">
    <div class="m-4">
     <%= cl_image_tag(activity.photo.key,width: 350, height: 200, crop: :fill, class: 'img-fluid') %>
      <div class="body-card d-flex">
        <div class="d-flex">
          <p class="title flex-grow-1"> <%= activity.title %> </p>
          <p class="para start-in">
                    Starts in <%= pluralize(activity.days_to_start, 'day') %>
                  </p>
                </div>

                <p class="para"> <%= activity.location %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
