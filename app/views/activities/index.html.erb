<%= render "search_form" %>

<%= link_to "Create your activity", new_activity_path, class: "btn btn-primary justify-content-end create-btn" %>

<div class="map-card-layout">
  <div id="theme">
    <% Theme.all.sample(3).each do |theme| %>
      <%= link_to results_activities_path(theme: theme.name) do %>
        <div class="card-category-theme"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
          url(<%= asset_path("#{theme.name}.jpg") %>);">
          <%= theme.name.upcase %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div id="map" class="map-index"
       style="height: 400px; width: 700px"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>



<h4 class="activity-title"> Activities near you </h4>

<h5> Lisbon </h5>

<div class="container">
<div class="row">
  <% @activities.each do |activity| %>
  <div class="card-category col-4">
    <%= link_to activity_path(activity), class:'text-decoration-none' do %>
    <div class="m-3">
     <%= cl_image_tag(activity.photo.key,width: 350, height: 200, crop: :fill) %>
      <div class="body-card d-flex">
        <div>
          <p class="title-card"> <%= activity.title %> </p>
          <p class="para"> <%= activity.location %></p>
       </div>
       <p class="para"> Start in : <%=( activity.start_date - Date.today).to_i %> days </p>
      </div>
    </div>
     <% end %>
  </div>
  <% end %>
</div>
</div>


