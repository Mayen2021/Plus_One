<div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex">
  <div class="logo">
    <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>
  </div>

  <div class="collapse navbar-collapse flex-nav" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <% if user_signed_in? %>
        <% if current_user.profile.present? %>
        <p>Welcome <%= current_user.profile.first_name %> </p>
        <%= link_to "MY PROFILE", profile_path(current_user.profile), class: "navg-link" %>
        <%= link_to "MY BOOKINGS", bookings_path, class: "navg-link" %>
        <% else %>
        <%= link_to "My profile", new_profile_path %>
        <% end %>

        <%= link_to "LOG OUT",destroy_user_session_path, class: "nav-link2", method: :delete %>
        <% else %>
          <%= link_to "JOIN NOW", new_user_registration_path, class: "nav-link2" %>
          <%= link_to "LOG IN", new_user_session_path, class: "nav-link2" %>
      <% end %>
    </ul>
  </div>
</div>




