


        <div class="card-category-profile" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('pp.jpg') %>)">
         <h1 class="prenom"> <%= @profile.first_name %> <%= @profile.last_name %> </h1>
        </div>
        <div class="card-trip-infos">

            <% if @profile.photo.present? %>
                       <%= cl_image_tag @profile.photo.key, height: 300, width: 400, crop: :fill, class: 'avatar-profile-p card-trip-user avatar-bordered' %>
                       <% else %>
                        <%= cl_image_tag('avatar.jpg') %>
                      <% end %>
        </div>



        <div class="container mt-5 d-flex ">
            <div class="card p-3 ">
                <div class="d-flex align-items-center">
                    <div class="image"> <img src="https://images.unsplash.com/photo-1560790671-b76ca4de55ef?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=674&q=80" class="rounded" width="155"> </div>
                    <div class="ml-3 w-100">
                        <h4 class="mb-0 mt-0">About me</h4> <span>   <p>  <%= @profile.job_title %> <p></span>
                        <div class="p-2 mt-2 bg-primary d-flex justify-content-between rounded text-white stats">
                            <div class="d-flex flex-column"> <span class="articles">Articles</span> <span class="number1">38</span> </div>
                            <div class="d-flex flex-column"> <span class="followers">Followers</span> <span class="number2">980</span> </div>
                            <div class="d-flex flex-column"> <span class="rating">Rating</span> <span class="number3">8.9</span> </div>
                        </div>
                        <div class="button mt-2 d-flex flex-row align-items-center">
                        <%= link_to " Create activity", new_activity_path, class: "btn btn-sm btn-outline-primary " %>
                        <%= link_to " Edit profile", edit_profile_path, class: "btn btn-sm btn-primary  " %>
                        </div>
                    </div>
                </div>
            </div>

             <div class="my-history shadow p-3 mb-5 bg-white rounded">
                       <h3 class="my-title-history">My history</h3>

                          <div class="container-activity-user" style="text-decoration: none">
                          <ul class="list">
                          <li>
                          <% @profile.user.activities.each do |activity| %>
                          <i class="fas fa-chevron-circle-down">
                        <%= activity.title %>
                        </i>

                          </li>


                     <% end %>

                     </ul>
                     </div>
                    </div>



        </div>







