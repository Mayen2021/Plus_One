<h1>Bookings to confirm</h1>
<% @my_created_activities.each do |activity| %>
<% activity.bookings.each do |booking| %>


<p>activity: <%= activity.title %></p>
<p>user: <%= booking.user.profile.first_name %> <%= booking.user.profile.last_name %></p>
<p>status: <%= booking.status %> </p>
<p>start date: <%= activity.start_date %> </p>
<p>end date: <%= activity.end_date %> </p>
<p>location: <%= activity.location %> </p>
<% if booking.status == "pending" %>
<%= simple_form_for [booking.activity, booking], method: :patch do |f| %>

      <div class id="join-bu">
        <%= f.button :submit, "accept", class: 'sign-up-btn' %>
      </div>>
<% end %>


<% end %>
<% end %>
<% end %>
<h1>Bookings that I have made in other activies</h1>
<% @bookings_made.each do |booking| %>
<p>activity title: <%= booking.activity.title %></p>
<p>user: <%= booking.user.profile.first_name %> <%= booking.user.profile.last_name %></p>
<p>status: <%= booking.status %> </p>
<p>start date: <%= booking.activity.start_date %> </p>
<p>end date: <%= booking.activity.end_date %> </p>
<p>location: <%= booking.activity.location %> </p>
<% end %>
